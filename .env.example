# AI-SOC Watchdog - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Core Services
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Supabase Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# =============================================================================
# AUTHENTICATION (Change these for production!)
# =============================================================================

AUTH_USERNAME=analyst
AUTH_PASSWORD=watchdog123
SESSION_SECRET=generate_a_random_32_char_hex_string_here

# =============================================================================
# OPTIONAL - Enhanced Features
# =============================================================================

# Redis Cache (improves performance, reduces API costs)
# REDIS_URL=redis://localhost:6379/0

# AWS S3 Failover (database backup)
# AWS_ACCESS_KEY=your_aws_access_key
# AWS_SECRET_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=your-soc-backup-bucket

# Alert Ingestion API Key (for SIEM integration)
INGEST_API_KEY=generate_a_secure_random_key_here

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Set to 'production' for stricter security
# FLASK_ENV=production

# Daily AI budget limit (USD)
# DAILY_BUDGET=5.00
